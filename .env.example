# Sandbox API URL (default: http://localhost:8000)
SANDBOX_URL=http://localhost:8000

# OpenAI API key (required for LLM)
OPENAI_API_KEY=sk-your-openai-api-key

# Database URL (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./data/agent_memory.db

# Vector store path (ChromaDB)
VECTOR_STORE_PATH=./data/chroma_db

# Optional: Sandbox API key (enables auth when set)
# SANDBOX_API_KEY=your-secret-key

# Optional: Logfire token for observability
# LOGFIRE_TOKEN=your-logfire-token
